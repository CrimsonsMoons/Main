-- Load Kavo UI Library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("Mob Teleport GUI", "DarkTheme")

-- Create tab + section
local TeleportTab = Window:NewTab("Teleport")
local TeleportSection = TeleportTab:NewSection("Mob Teleport")

-- Player reference
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- Update HRP on respawn
player.CharacterAdded:Connect(function(newChar)
    character = newChar
    hrp = character:WaitForChild("HumanoidRootPart")
end)

-- === Mob References ===
local mob1 = workspace:WaitForChild("Mobs"):WaitForChild("Glutto2"):WaitForChild("Glutto"):WaitForChild("Berry")
local mob2 = workspace:WaitForChild("Mobs"):WaitForChild("Glutto3"):WaitForChild("Glutto"):WaitForChild("Body")
local mob3 = workspace:WaitForChild("Mobs"):WaitForChild("Clerick2"):WaitForChild("Clerick"):WaitForChild("HumanoidRootPart")

-- === Toggle 1: Glutto2.Berry ===
local teleporting1 = false
TeleportSection:NewToggle("Teleport Behind Glutto2 (Berry)", "Keeps teleporting behind Glutto2 Berry", function(state)
    teleporting1 = state
    if teleporting1 then
        task.spawn(function()
            while teleporting1 do
                if hrp and mob1 and mob1:IsDescendantOf(workspace) then
                    hrp.CFrame = mob1.CFrame * CFrame.new(0, 0, 5) -- 5 studs behind
                end
                task.wait(0.2)
            end
        end)
    end
end)

-- === Toggle 2: Glutto3.Body ===
local teleporting2 = false
TeleportSection:NewToggle("Teleport Behind Glutto3 (Body)", "Keeps teleporting behind Glutto3 Body", function(state)
    teleporting2 = state
    if teleporting2 then
        task.spawn(function()
            while teleporting2 do
                if hrp and mob2 and mob2:IsDescendantOf(workspace) then
                    hrp.CFrame = mob2.CFrame * CFrame.new(0, 0, 5) -- 5 studs behind
                end
                task.wait(0.2)
            end
        end)
    end
end)

-- === Toggle 3: Clerick2.HumanoidRootPart ===
local teleporting3 = false
TeleportSection:NewToggle("Teleport Behind Clerick2", "Keeps teleporting behind Clerick2", function(state)
    teleporting3 = state
    if teleporting3 then
        task.spawn(function()
            while teleporting3 do
                if hrp and mob3 and mob3:IsDescendantOf(workspace) then
                    hrp.CFrame = mob3.CFrame * CFrame.new(0, 0, 5) -- 5 studs behind
                end
                task.wait(0.2)
            end
        end)
    end
end)
