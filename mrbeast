-- Load Kavo UI Library
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("HumanoidRootPart Teleport", "DarkTheme")

local TeleportTab = Window:NewTab("Teleport")
local TeleportSection = TeleportTab:NewSection("Mob Teleport")

-- Player reference
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

player.CharacterAdded:Connect(function(newChar)
    character = newChar
    hrp = character:WaitForChild("HumanoidRootPart")
end)

-- Function to get all HumanoidRootParts in workspace.Mobs, excluding "Explorer"
local function getHRPs()
    local parts = {}
    local mobsFolder = workspace:FindFirstChild("Mobs")
    if mobsFolder then
        for _, mob in pairs(mobsFolder:GetChildren()) do
            if mob.Name ~= "Explorer" and mob:FindFirstChild("HumanoidRootPart") then
                table.insert(parts, mob.HumanoidRootPart)
            end
        end
    end
    return parts
end

-- === Universal toggle ===
local teleporting = false
TeleportSection:NewToggle("Auto Teleport Behind HRPs", "Teleports behind any mob with HumanoidRootPart except Explorer", function(state)
    teleporting = state
    if teleporting then
        task.spawn(function()
            while teleporting do
                if hrp then
                    local targets = getHRPs()
                    for _, part in ipairs(targets) do
                        if part and part:IsDescendantOf(workspace) then
                            hrp.CFrame = part.CFrame * CFrame.new(0, 0, 5) -- teleport behind
                            task.wait(0.2) -- short delay between mobs
                        end
                    end
                end
                task.wait(0.5) -- refresh for respawns
            end
        end)
    end
end)
