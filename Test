    "{cd4c34c5-99a6-4f28-ac73-bfad7c8e1ca2}", -- duplicate safe
}

-- === Universal Exclusions ===
local exclusions = {
    ["{84b93b68-b932-4db8-b765-d1bd9ef8aae9}"] = true,
    ["{c5769905-aecf-4d7a-ada9-064802b0cae9}"] = true,
    ["{d2227f02-c482-4911-b201-7e842b31c47c}"] = true,
    ["{6b019e60-21c6-4536-9a06-4cbfee80d88f}"] = true,
    ["{12916ad6-7fd9-46d5-8bc1-e69671249721}"] = true,
    ["{c91d0e3a-e8c6-4e70-b274-9b7304ffbb28}"] = true,
    ["{2c0549c7-f2d0-4828-bc2a-6d484e792cdd}"] = true,
    ["{de31ac95-029b-4c26-b9f8-4b61faed7335}"] = true,
    ["{fd489389-537f-40e1-bd1a-c048522d23bc}"] = true,
    ["{f1f04024-ba69-4d0f-9fee-4f93758c1bfc}"] = true,
    ["{980efa15-9598-4070-b1c2-344bd80cce25}"] = true,
    ["Horse"] = true,
    ["Travel Boat"] = true,
}

-- === Helper: Check if string is UUID ===
local function isUUID(str)
    return typeof(str) == "string" and str:match("^%b{}$") ~= nil
end

-- === Helper: Fire all tools safely ===
local function fireAllTools(target)
    for _, toolUUID in ipairs(TOOL_UUIDS) do
        pcall(function()
            remote:FireServer(toolUUID, "Activate", target)
        end)
    end
end

-- === Auto Catch Function (safe for all islands) ===
local function autoCatchLoop(islandNames, delay)
    task.spawn(function()
        while true do
            local playerPos = hrp.Position
            -- Island folders
            for _, islandName in ipairs(islandNames) do
                local folder = islandsFolder:FindFirstChild(islandName) or (explorerFolder and explorerFolder:FindFirstChild(islandName))
                if folder then
                    for _, model in ipairs(folder:GetChildren()) do
                        if isUUID(model.Name) and not exclusions[model.Name] and model:FindFirstChild("Body") then
                            local dist = (model.Body.Position - playerPos).Magnitude
                            if dist <= 15 then
                                fireAllTools(model)
                            end
                        end
                    end
                end
            end
            -- Top-level Workspace UUIDs
            for _, model in ipairs(workspace:GetChildren()) do
                if isUUID(model.Name) and not exclusions[model.Name] and model:FindFirstChild("Body") then
                    local dist = (model.Body.Position - playerPos).Magnitude
                    if dist <= 15 then
                        fireAllTools(model)
                    end
                end
            end
            task.wait(delay)
        end
    end)
end

-- === Auto Catch Toggles ===
local autoCatchAllEnabled = false
AutoSection:NewToggle("Auto Catch All", "Catch mobs on all islands 1–9 safely", function(state)
    autoCatchAllEnabled = state
    if state then
        autoCatchLoop({"Mainland","Forest Island","Mountain Island","Lunar Islands","Royal Island","Blizzard Island","Jungle Island","Volcano Island","Desert Island","Glacier Island"}, 0.5)
    end
end)
